
<main>
    <h1><%= title %></h1>

    <!-- Display errors and messages -->
    <% if (errors) { %>
        <div class="errors">
            <% errors.forEach(function(error) { %>
                <p><%= error.msg %></p>
            <% }) %>
        </div>
    <% } %>

    <% if (messages.length > 0) { %>
        <div class="messages">
            <% messages.forEach(function(message) { %>
                <p><%= message %></p>
            <% }) %>
        </div>
    <% } %>

    <!-- Account Update Form -->
    <form action="/account/update/<%= account.account_id %>" method="POST" novalidate>
        <h2>Account Update</h2>

        <label for="firstname">First Name:</label>
        <input type="text" id="firstname" name="account_firstname" value="<%= account.account_firstname %>" required>

        <label for="lastname">Last Name:</label>
        <input type="text" id="lastname" name="account_lastname" value="<%= account.account_lastname %>" required>

        <label for="email">Email:</label>
        <input type="email" id="email" name="account_email" value="<%= account.account_email %>" required>

        <input type="hidden" name="account_id" value="<%= account.account_id %>">

        <button type="submit">Update Account</button>
    </form>

    <!-- Change Password Form -->
    <form action="/account/update-password/<%= account.account_id %>" method="POST" novalidate>
        <h2>Change Password</h2>

        <label for="new-password">New Password:</label>
        <input type="password" id="new-password" name="new_password" required>
        <p>Password must be at least 12 characters long, contain at least one uppercase letter, one lowercase letter, one number, and one special character.</p>

        <input type="hidden" name="account_id" value="<%= account.account_id %>">

        <button type="submit">Change Password</button>
    </form>
</main>
